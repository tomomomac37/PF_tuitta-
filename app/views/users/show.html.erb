<%= render 'users/info', user: @user %>
<div class="container">
  <h2>My Page</h2>
  <div class="row">
    <div class="col-md-4">
      <h3><%= @user.name %></h3>
      <p class="introduction"><%= @user.introduction %></p>
      <% @posts.each do |post| %>
        <hr>
        <p><span>ツイート内容: </span><%=link_to post.body, post_path(post.id) %></p>
      <% end %>
    </div>
    <div class="col-md-4">
      <% if @user.id == current_user.id %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
      <% end %>
      
    </div>
  </div>
</div>