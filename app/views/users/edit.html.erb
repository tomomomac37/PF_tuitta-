<h1>プロフィールを編集</h1>
<%= form_with model: @user, url: user_path, method: :patch, local: true do |f| %>
  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :自己紹介 %><br>
    <%= f.text_area :introduction, autofocus: true %>
  </div>
  
  <%= f.submit "保存", class: "btn btn-primary" %>
<% end %>