<div class="user-introduction">
    <div class="projects-section-header ">
        <p>
            <div data-toggle="modal" data-target="#userprofile">
              <!--<% if @user.profile_image.attached? %>-->
              <!--  <%= image_tag @user.profile_image, class:"border border-secondary rounded-circle border-0", size:"75x75" if @user.profile_image.attached? %>-->
              <!--<% else %>-->
              <!--  <%= image_tag "no_image.jpg" %>-->
              <!--<% end %>-->
                <%= image_tag @user.user_profile_or_empty, class:"border border-secondary rounded-circle border-0", size:"75x75" %>
              <%#= attachment_image_tag(@user, :profile_image, format: 'jpeg', size: "75x75", fallback: "no_image.jpg") %>
            </div>
            
            <!-- Modal -->
            <div class="modal fade" id="userprofile" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header" style="height: 10px;">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <%#= attachment_image_tag(@user, :profile_image, format: 'jpeg', size: "450x450", fallback: "no_image.jpg") %>
                    <%= image_tag @user.user_profile_or_empty, class:"border border-secondary rounded-circle border-0", size:"450x450" %>
                  </div>
                </div>
              </div>
            </div>
        </p>
            <p style="padding-left: 10px;"><%= @user.name %></p>
    </div>
    <p class="introduction">
    <%= @user.introduction %>
    </p>
</div>