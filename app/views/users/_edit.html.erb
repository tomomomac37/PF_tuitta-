<div class="modal-dialog" role="document">
  <div class="modal-content">
    <h3>プロフィールを編集</h3>
    <%= form_with model: @user, method: :patch do |f| %>
      <div class="field">
      <%= image_tag @user.user_profile_or_empty, class:"border border-secondary rounded-circle border-0", size:"75x75" %>
      <%#= f.attachment_field :profile_image, :placeholder => "プロフィール画像" %>
      <%= f.file_field :profile_image %>
      </div>
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true %>
      </div>
      <div class="field">
        <%= f.label :自己紹介 %><br>
        <%= f.text_area :introduction, autofocus: true %>
      </div>
      <%= f.submit "保存", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>