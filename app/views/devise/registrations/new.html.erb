<% content_for :css do %>
    <%= stylesheet_link_tag 'signup' %>
<% end %>

	<div class="main-w3layouts wrapper">
		<h1>新規登録</h1>
		<p style="text-align: center;">このサイトはあなたの気持ちを自由に吐くための場所です</p>
		<div class="main-agileinfo">
			<div class="agileits-top">
				<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
					<!--<%= render "devise/shared/error_messages", resource: resource %>-->
					<!--<input class="text" type="text" name="Username" placeholder="Username" required="">-->
					<%= f.text_field :name, autofocus: true, :class => 'input', :placeholder => 'Username' %><br/>
					<!--<input class="text email" type="email" name="email" placeholder="Email" required="">-->
					<%= f.email_field :email, autofocus: true, :class => 'input', :placeholder => 'Email' %><br/>
					<!--<input class="text" type="password" name="password" placeholder="Password" required="">-->
					<!--ここの表示を自然にする-->
					<% if @minimum_password_length %>
            <!--<em>(<%#= @minimum_password_length %> characters minimum)</em>-->
          <%= f.password_field :password, autocomplete: "new-password", :class => 'input', :placeholder => 'Password (6 characters minimum)' %><br/>
          <% end %>
					<!--<input class="text w3lpass" type="password" name="password" placeholder="Confirm Password" required="">-->
					<%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'input', :placeholder => 'ConfirmPassword' %><br/>
					<div class="wthree-text">
						<label class="anim">
							<input type="checkbox" class="checkbox" required="">
							<span>I Agree To The Terms & Conditions</span>
						</label>
						<div class="clear"> </div>
					</div>
					<!--<input type="submit" value="SIGNUP">-->
					<%= f.submit "Sign up", :class => 'input'  %>
				<% end %>
				<p>アカウントをお持ちなら→<%= link_to "ログインはこちら", new_user_session_path, class: "btn btn-outline-light" %></p>
			</div>
		</div>
		<!-- copyright -->
		<div class="colorlibcopy-agile">
			<p>© 2021 Tomohiro Hori</p>
		</div>
